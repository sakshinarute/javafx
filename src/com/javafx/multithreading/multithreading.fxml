<BorderPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.javafx.multithreading.DemoController">
   <top>
      <Label alignment="CENTER" styleClass="header-label" text="Multithreading Demo - Task &amp; Service" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0" BorderPane.alignment="CENTER" style="-fx-padding: 20;">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Button fx:id="btnTask" mnemonicParsing="false" text="Run Task" />
            <Button fx:id="btnService" mnemonicParsing="false" text="Run Service" />
            <ProgressBar fx:id="progressBar" prefWidth="400.0" progress="0.0" />
            <Label fx:id="statusLabel" text="Status: Idle" />
         </children>
      </VBox>
   </center>
   <bottom>
      <Label alignment="CENTER" contentDisplay="CENTER" text="Â© Demo Training" BorderPane.alignment="CENTER" />
